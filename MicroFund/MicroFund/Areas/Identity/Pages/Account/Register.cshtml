@page
@model RegisterModel
@using Utility
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h3 class="col-12 text-dark text-center py-4">
                @if (User.IsInRole(StaticDetails.AdminRole)) {
                    <strong>Register a User</strong>
                } else {
                    <strong>Sign Up</strong>
                }
            </h3>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole(StaticDetails.AdminRole)) {
            <div class="form-group">
                <input type="radio" name="rdUserRole" value="@StaticDetails.AdminRole" /> @StaticDetails.AdminRole
                <input type="radio" name="rdUserRole" value="@StaticDetails.JudgeRole" /> @StaticDetails.JudgeRole
                <input type="radio" name="rdUserRole" value="@StaticDetails.MentorRole" /> @StaticDetails.MentorRole
                <input type="radio" name="rdUserRole" value="@StaticDetails.ApplicantRole" /> @StaticDetails.ApplicantRole
        </div>
            } else {
                <input type="hidden" name="rdUserRole" value="@StaticDetails.ApplicantRole" />
            }
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
