<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/images/MF.png" rel="shortcut icon" type="image/x-icon" />
    <title>@ViewData["Title"] - MicroFund</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-purple-wsu mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">MicroFund</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole(Utility.StaticDetails.AdminRole))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropDown" data-toggle="dropdown">Manage</a>
                                <div class="dropdown-menu bg-purple-wsu">
                                    <a class="dropdown-item text-white" asp-page="/Admin/User/Index">Users</a>
                                </div>
                            </li>
                        }
                        @if (User.IsInRole(Utility.StaticDetails.ApplicantRole))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Applicant/Profile/Index">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Applicant/MyApplications/Index">My Applications</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Applicant/Apply/Index">Apply</a>
                            </li>
                        }
                        @if (User.IsInRole(Utility.StaticDetails.JudgeRole))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Judge/Applications/Index">View Applications</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Judge/Scorecards/Index">View Scorecards</a>
                            </li>
                        }
                        @if (User.IsInRole(Utility.StaticDetails.MentorRole))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Mentor/Assignments/Index">Assignments</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - MicroFund - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
