@page
@model MicroFund.Pages.Mentor.Assignments.EditModel

@{
    ViewData["Title"] = "Assign Mentor";
    ViewData["Dashboard"] = "Mentor Dashboard";
}

<h1>Assign Mentor</h1>

<h4>@Model.Application.CompanyName | Application # @Model.Iteration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MentorAssignment.MentorId" class="control-label"></label>
                <select asp-for="MentorAssignment.MentorId" class="form-control" asp-items="ViewBag.MentorId"></select>
                <span asp-validation-for="MentorAssignment.MentorId" class="text-danger"></span>
            </div>
            <input asp-for="MentorAssignment.UpdatedBy" type="hidden" value="@Model.CurrentUserId" />
            <input asp-for="MentorAssignment.UpdatedDate" type="hidden" value="@DateTime.Now" />
            <input asp-for="MentorAssignment.DateAssigned" type="hidden" value="@DateTime.Now" />
            <input asp-for="MentorAssignment.IsArchived" type="hidden" value="false" />
            <input asp-for="MentorAssignment.ApplicationId" type="hidden" value="@Model.Application.ApplicationId" />
            <input type="hidden" asp-for="MentorAssignment.MentorAssignmentId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
