@page
@model MicroFund.Pages.Admin.Manage.ApplicationStatus.UpsertModel
@inject UserManager<IdentityUser> UserManager
@{
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-primary">@(Model.ApplicationStatusObj.ApplicationStatusId != 0  ? "Update" : "Create") Application Status</h2>
            </div>
            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="ApplicationStatusObj.StatusDescription"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="ApplicationStatusObj.StatusDescription" />
                        <span class="text-danger" asp-validation-for="ApplicationStatusObj.StatusDescription"></span>
                    </div>
                    @if (Model.ApplicationStatusObj.ApplicationStatusId != 0)
                    {
                        <input type="hidden" asp-for="ApplicationStatusObj.ApplicationStatusId" />
                    }
                    <input type="hidden" asp-for="ApplicationStatusObj.UpdatedBy" value="@Model.CurrentUserId" />
                    <input type="hidden" asp-for="ApplicationStatusObj.UpdatedDate" value="@DateTime.Now" />
                </div>
                @if (Model.ApplicationStatusObj.ApplicationStatusId != 0)
                {
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="ApplicationStatusObj.IsArchived"></label>
                        </div>
                        <div class="col-9">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="@Model.ApplicationStatusObj.IsArchived" value="true" />
                                <label class="form-check-label">True</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="@Model.ApplicationStatusObj.IsArchived" value="False" />
                                <label class="form-check-label">False</label>
                            </div>
                        </div>
                    </div>
                }
                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">

                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-danger form-control">Back to List</a>
                            </div>
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary text-white form-control">@(Model.ApplicationStatusObj.ApplicationStatusId != 0  ? "Update" : "Create")</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
