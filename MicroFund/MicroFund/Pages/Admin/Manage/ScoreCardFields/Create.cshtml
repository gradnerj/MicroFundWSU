@page
@model MicroFund.Pages.Admin.Manage.ScoreCardFields.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ScoreCardField</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ScoreCardField.ScoringCategoryId" class="control-label"></label>
                <select asp-for="ScoreCardField.ScoringCategoryId" class="form-control" asp-items="ViewBag.ScoringCategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ScoreCardField.ScoreCardFieldName" class="control-label"></label>
                <input asp-for="ScoreCardField.ScoreCardFieldName" class="form-control" />
                <span asp-validation-for="ScoreCardField.ScoreCardFieldName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScoreCardField.ScoreCardFieldDescription" class="control-label"></label>
                <input asp-for="ScoreCardField.ScoreCardFieldDescription" class="form-control" />
                <span asp-validation-for="ScoreCardField.ScoreCardFieldDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScoreCardField.Weight" class="control-label"></label>
                <input asp-for="ScoreCardField.Weight" class="form-control" />
                <span asp-validation-for="ScoreCardField.Weight" class="text-danger"></span>
            </div>
            <input asp-for="ScoreCardField.UpdatedBy" type="hidden" value="@Model.CurrentUserId" />
            <input asp-for="ScoreCardField.UpdatedDate" type="hidden" value="@DateTime.Now" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ScoreCardField.IsArchived" /> @Html.DisplayNameFor(model => model.ScoreCardField.IsArchived)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
