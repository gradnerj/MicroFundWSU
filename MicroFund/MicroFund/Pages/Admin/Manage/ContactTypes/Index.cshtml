@page
@model MicroFund.Pages.Admin.Manage.ContactTypes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Contact Types</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContactType[0].ContactTypeDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactType[0].IsArchived)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ContactType) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContactTypeDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsArchived)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ContactTypeId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ContactTypeId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ContactTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
