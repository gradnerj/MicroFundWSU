@page
@model MicroFund.Pages.Admin.Manage.Questions.EditModel

@{
    ViewData["Title"] = "Edit";
    ViewData["Dashboard"] = "Admin Dashboard";
}

<h1>Edit</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Question.QuestionId" />
            <div class="form-group">
                <label asp-for="Question.QuestionCategoryId" class="control-label"></label>
                <select asp-for="Question.QuestionCategoryId" class="form-control" asp-items="ViewBag.QuestionCategoryId"></select>
                <span asp-validation-for="Question.QuestionCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.QuestionDescription" class="control-label"></label>
                <input asp-for="Question.QuestionDescription" class="form-control" />
                <span asp-validation-for="Question.QuestionDescription" class="text-danger"></span>
            </div>
            <input asp-for="Question.UpdatedBy" type="hidden" value="@Model.CurrentUserId" />
            <input asp-for="Question.UpdatedDate" type="hidden" value="@DateTime.Now" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Question.IsArchived" /> @Html.DisplayNameFor(model => model.Question.IsArchived)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
