@page
@model MicroFund.Pages.Admin.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    td.eventItems {
        border-bottom: solid 1px #5900B3;
        padding-bottom: 12px;
        padding-top: 12px;
        padding-left: 7px;
    }
</style>

<div class="row">
    <div class="col-6">
        <div class="row">
            <div class="col-6 offset-2">
                <a asp-page="/Admin/Applications/Index" class="btn p-4 m-1 text-white text-center bg-gray-wsu" style="width:250px;">Review Applications</a>
                <a asp-page="/Mentor/Assignments/Index" class="btn p-4 m-1 text-white text-center bg-gray-wsu" style="width:250px;">Assign Mentors</a>
                <a asp-page="/Admin/FollowUp/Index" class="btn p-4 m-1 text-white text-center bg-gray-wsu" style="width:250px;">Follow-Ups</a>
                <div class="btn-group dropright" style="width:258px !important;">
                    <button type="button" class="btn dropdown-toggle p-4 m-1 text-white text-center bg-gray-wsu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Manage
                    </button>
                    <div class="dropdown-menu bg-gray-wsu">
                        <a class="dropdown-item text-white" asp-page="/Admin/User/Index">Users</a>
                        <a class="dropdown-item text-white" asp-page="/Admin/Manage/AddressTypes/Index">Address Types</a>
                        <a class="dropdown-item text-white" asp-page="/Admin/Manage/ContactTypes/Index">Contact Types</a>
                        <a class="dropdown-item text-white" asp-page="/Admin/Manage/ApplicationStatuses/Index">Application Status</a>
                        <a class="dropdown-item text-white" asp-page="/Admin/Manage/Questions/Index">Questions</a>
                        <a class="dropdown-item text-white" asp-page="/Admin/Manage/QuestionCategories/Index">Question Categories</a>
                        <a class="dropdown-item text-white" asp-page="/Admin/Manage/ScoreCardFields/Index">Score Card Fields</a>
                        <a class="dropdown-item text-white" asp-page="/Admin/Manage/ScoringCategories/Index">Scoring Categories</a>
                        @*<a class="dropdown-item text-white" asp-page="/Admin/Manage/FollowUpTypes/Index">Follow Up Types</a>*@
                        <a class="dropdown-item text-white" asp-page="/Admin/Manage/PitchEvents/Index">Pitch Events</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="row">
            <div class="col-10 offset-1 mt-2 p-2 bg-pantone666-wsu">
                <h3 class="text-center">Upcoming Events</h3>
            </div>
            <div style="height:200px;width:600px;overflow:auto;">
                <table class="col-10 offset-1">
                    <tr>
                        <td class="eventItems">
                            March 10 - Applications Due
                        </td>
                    </tr>
                    <tr>
                        <td class="eventItems">
                            March 17 - Pitch Meeting
                        </td>
                    </tr>
                    <tr>
                        <td class="eventItems">
                            March 30 - Mentoring Review
                        </td>
                    </tr>
                    <tr>
                        <td class="eventItems">
                            April 1 - Pitch Meeting
                        </td>
                    </tr>
                    <tr>
                        <td class="eventItems">
                            April 7 - Mentoring Review
                        </td>
                    </tr>
                    <tr>
                        <td class="eventItems">
                            April 10 - Pitch Meeting
                        </td>
                    </tr>
                    <tr>
                        <td class="eventItems">
                            April 12 - Applications Due
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-4 offset-1 mt-5">
                <button type="button" class="btn p-4 m-1 text-white text-center bg-purple-wsu" style="width:100%;">New Event</button>
                <a asp-page="/Calendar" class="btn p-4 m-1 text-white text-center bg-purple-wsu" style="width:100%;">View Calendar</a>
            </div>
        </div>
    </div>
</div>