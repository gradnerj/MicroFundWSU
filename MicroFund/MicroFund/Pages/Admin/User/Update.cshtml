@page
@model MicroFund.Pages.Admin.User.UpdateModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Update User</h1>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <form class="form" method="post">
                <input asp-for="AppUser.Id" type="hidden" value="@Model.AppUser.Id" />
                <input asp-for="AppUser.ConcurrencyStamp" type="hidden" value="@Model.AppUser.ConcurrencyStamp" />
                <input asp-for="AppUser.IsArchived" type="hidden" value="@Model.AppUser.IsArchived" />
                <div class="form-group">
                    <label asp-for="AppUser.Email">Email</label>
                    <input asp-for="AppUser.Email" type="email" value="@Model.AppUser.Email" size="40" />
                    <hr />
                </div>
                <div class="row">
                    <div class="col-6">
                        <label>Role</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="@Model.UserRole" value="Admin" />
                            <label class="form-check-label">Admin</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="@Model.UserRole" value="Judge" />
                            <label class="form-check-label">Judge</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="@Model.UserRole" value="Mentor" />
                            <label class="form-check-label">Mentor</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="@Model.UserRole" value="Applicant" />
                            <label class="form-check-label">Applicant</label>
                        </div>
                        <hr />
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>